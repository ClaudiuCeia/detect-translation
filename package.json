{
  "name": "detect-translation",
  "version": "0.0.2",
  "description": "Trigger code when people translate your website",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Claudiu Ceia",
  "license": "MIT",
  "scripts": {
    "build": "ts-node ./.bin/create-lang-ids.js && tsc",
    "lint": "eslint ./src --ext .js,.ts && prettier --write --ignore-unknown .",
    "test": "ts-node ./.bin/create-lang-ids.js && jest",
    "prepublish": "ts-node ./.bin/create-lang-ids.js && tsc",
    "analyze": "source-map-explorer ./dist/*.js{,.map}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && lint-staged"
    }
  },
  "lint-staged": {
    "./{src,bin}/**/*.{js,ts}": [
      "eslint ./src --ext .js,.ts",
      "prettier --write --ignore-unknown"
    ],
    "./*.{js,ts}": "prettier --write --ignore-unknown"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ClaudiuCeia/detect-translation.git"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "cldr": "^5.7.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-jest": "^24.1.0",
    "husky": "^4.2.3",
    "jest": "^26.5.2",
    "jest-environment-jsdom": "^26.5.2",
    "jest-environment-jsdom-global": "^2.0.4",
    "js-yaml": "^3.14.0",
    "lint-staged": ">=10",
    "mutationobserver-shim": "^0.3.3",
    "prettier": "^2.1.2",
    "sanitize-html": "^2.1.0",
    "source-map-explorer": "^2.4.2",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
